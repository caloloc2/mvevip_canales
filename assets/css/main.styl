@import 'fonts.styl'
@import 'icomoon.styl'

verde = #A6BF31

#cargando
    margin 0
    padding 0
    position fixed 
    top 0
    left 0
    right 0
    bottom 0
    background rgba(255,255,255,0.7)
    z-index 100
    display none
    justify-content center
    align-items center

    .contenedor
        margin 0
        padding 1em 2em 
        background white 
        border 1px solid rgba(0,0,0,0.1)
        border-radius 0.5em
        width 400px 
        text-align center
        -webkit-box-shadow 0px 0px 11px -1px rgba(0,0,0,0.64)
        -moz-box-shadow 0px 0px 11px -1px rgba(0,0,0,0.64)
        box-shadow 0px 0px 11px -1px rgba(0,0,0,0.64)        

        figure 
            margin 0 auto
            padding 0
            width 100px 

            img 
                margin 0
                padding 0
                width 100%        
        
        p 
            margin 0
            padding 1em 0 0 0
            font-size 13px
            font-weight bold                        

#iconos
    margin 0
    padding 0 1em
    list-style none 

    .item
        margin 0
        padding 0

        a  
            margin 0
            padding 0
            text-decoration none 
            font-size 22px
            color #d5d5d5
            transition all 0.3s linear 
        
        .activo 
            color #FFEB3B
        
        a:hover 
            color white

.icono_call 
    margin 0
    padding 0
    font-size 35px
    color #999
    text-decoration none 
    transition all 0.1s linear 

.icono_call:hover 
    color #333

#contenedor
    margin 0
    padding 0
    position fixed 
    top 0
    left 0
    right 0
    bottom 0
    background-image url('tapiz.png')

    .menu, .chats, .panel
        margin 0
        padding 0
        display inline-block 
        vertical-align top
        height 100%
    
    .menu 
        list-style none
        background #555
        padding 1em 0

        li  
            display block  
            margin 0 0 0.5em 0
            padding 0.3em 1em

            a 
                color #a5a5a5
                margin 0
                padding 0
                font-size 35px
                text-decoration none 
                transition all 0.3s linear 

        li:hover 

            a 
                color verde
            
        .activo 

            a 
                color verde
    
    .chats 
        margin 0 
        padding 1em 
        background #f5f5f5 
        width 325px
        -webkit-box-shadow: 6px 0px 11px -4px rgba(0,0,0,0.19);
        -moz-box-shadow: 6px 0px 11px -4px rgba(0,0,0,0.19);
        box-shadow: 6px 0px 11px -4px rgba(0,0,0,0.19);

        figure 
            margin 0 auto 
            padding 0
            width 150px

            img  
                margin 0
                padding 0
                width 100%    

    .panel 
        margin 0
        padding 0        
        position absolute
        top 0
        right 0
        bottom 0
        left 405px

        .controlador 
            margin 0
            padding 0
            position relative 
            width 100%
            height 100%
                    
            .inferior
                margin 0
                padding 1em
                position absolute
                left 0
                bottom 0
                right 0
                background rgba(0,0,0,0.02)
            
            .superior
                margin 0
                padding 1em 
                background rgba(255,255,255,0.2)
                position relative
                border-bottom 1px solid rgba(0,0,0,0.1)
                background white

                .chat_cliente
                    margin 0
                    padding 0

                    .nombre_chat_cliente
                        margin 0
                        padding 0
                        font-size 19px 
                        color #444
                        font-weight bold
                    
                    .etiqueta_cliente
                        margin 0
                        padding 0
                        list-style none 

                        li  
                            display inline-block
                            vertical-align middle
                
                .acciones 
                    margin 0
                    padding 0
                    list-style none                    
                    position absolute 
                    top 25px 
                    right 40px

                    li  
                        margin 0 0.5em
                        padding 0
                        display inline-block 
                        vertical-align middle

                        a 
                            margin 0
                            padding 0
                            font-size 30px
                            color #888
                            transition all 0.3s linear
                            text-decoration none
                        
                        a:hover 
                            color #222

            .mensajeria
                margin 0
                padding 1em
                overflow-y scroll
                height 75%

                .mensaje 
                    margin 1.5em 0
                    padding 0
                    width 100%                    
                    position relative 

                    .mensaje_contenedor
                        margin 0
                        padding 0                        
                        position absolute 
                        top 0                        

                        .mensaje_texto
                            margin 0
                            padding 0.5em 0.7em
                            font-size 14px 
                            color #333
                            border 1px solid rgba(0,0,0,0.1)
                            border-radius 0.35em
                            background white 
                            -webkit-box-shadow: 5px 5px 9px -5px rgba(0,0,0,0.40);
                            -moz-box-shadow: 5px 5px 9px -5px rgba(0,0,0,0.40);
                            box-shadow: 5px 5px 9px -5px rgba(0,0,0,0.40);

                        .mensaje_log
                            font-size 10px
                            color #888 
                            margin 0
                            padding 0.5em 0.7em     
                            font-weight bold 

                    .fromMe                        
                        right 0

                        .mensaje_texto
                            background verde
                            color white
                    
                    .fromUser                        
                        left 0
                
.colapso
    margin 0.5em 0 0 0
    padding 0
    list-style none
    overflow-y scroll
    max-height 350px    

    .item 
        margin 0
        padding 0

        .item_contacto
            margin 0
            padding 0.3em 0.7em
            position relative
            width 100%
            cursor pointer

            .datos 
                margin 0
                padding 0

                p  
                    margin 0
                    padding 0
                
                .contacto_nombre
                    font-size 13px
                    color #555
                    font-weight bold

            .contador 
                position absolute 
                top 10px
                right 20px  

        .activo 
            background verde    

            .datos 

                .contacto_nombre
                    color white  

.pest 
    text-decoration none 
    font-size 20px
    color #888

.nombre_grupo
    color #888

.activado
    font-weight bold

#logs
    max-height: 300px
    overflow-y: scroll

#chat
    margin 0
    padding 1em
    width 350px 
    height 500px
    position fixed 
    right 50px
    bottom 0
    border 1px solid rgba(0,0,0,0.2)
    background white
    z-index 5000
    border-top-left-radius: 1em 
    border-top-right-radius: 1em
    -webkit-box-shadow: 0px 0px 11px -1px rgba(0,0,0,0.58);
    -moz-box-shadow: 0px 0px 11px -1px rgba(0,0,0,0.58);
    box-shadow: 0px 0px 11px -1px rgba(0,0,0,0.58);

    .contenedor
        margin 0
        padding 0
        position relative
        height: 500px 

        .pie 
            position absolute
            bottom 30px
            left 0
            right 0
        
        .mensajes
            width: 100%